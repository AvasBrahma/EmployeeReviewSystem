<link rel="stylesheet" href="/css/viewemployee.css">
<link rel="stylesheet" href="/css/viewAssignedEmployee.css">
<div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="main-content">
            <!-- NAV TABS -->
        	<ul class="nav nav-tabs nav-tabs-custom-colored tabs-iconized">
        		<li class="active"><a href="#profile-tab" data-toggle="tab" aria-expanded="true"><i class="fa fa-user"></i> Profile</a></li>
        		<li class=""><a href="#activity-tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-rss"></i> Performance</a></li>
        		<li class=""><a href="#settings-tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-gear"></i> Settings</a></li>
        	</ul>

          <h1>Assigned Performance reviewed for employee : <%= excludedEmployee.name %></h1>
          <div class="selectEmpTable">
            <input type="text" id="searchInput" placeholder="Search user">
            <br><br>
          
            <form action="/admin/assigned-review/<%= locals.user.id %>" method="POST" id="userForm">
              <table>
                <thead>
                  <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Email</th>
                  </tr>
                </thead>
                <tbody id="tableBody">
                  <% employee.forEach(element => { %>
                  <tr>
                    <td>
                      <input type="checkbox" name="reviewerid" value="<%= element.id %>">
                      <input type="hidden" name="employeeid" value="<%= excludedEmployee.id %>">
                      <input type="hidden" name="employeename" value="<%= excludedEmployee.name %>">
                    </td>
                    <td><%= element.name %>
                      <input type="hidden" name="reviewername" value="<%= element.name %>">
                    </td>
                    <td><%= element.email %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <button type="submit" class="submit-button">Submit</button>
            </form>


          </div>
      
        </div>
    </div>
</div>


<script src="/js/admin.js"></script>